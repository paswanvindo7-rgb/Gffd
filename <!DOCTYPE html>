    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const videoUrlInput = document.getElementById('videoUrl');
            const downloadBtn = document.getElementById('downloadBtn');
            const videoInfo = document.getElementById('videoInfo');
            const loader = document.getElementById('loader');
            const videoThumbnail = document.getElementById('videoThumbnail');
            const videoTitle = document.getElementById('videoTitle');
            const videoChannel = document.getElementById('videoChannel');
            const videoDuration = document.getElementById('videoDuration');
            const videoViews = document.getElementById('videoViews');
            const qualityButtons = document.getElementById('qualityButtons');
            
            // Sample video data for demonstration
            const sampleVideoData = {
                title: "How to Create a YouTube Video Downloader Website",
                channel: "Web Development Tutorials",
                duration: "15:42",
                views: "245,871 views",
                thumbnail: "https://img.youtube.com/vi/dQw4w9WgXcQ/maxresdefault.jpg",
                formats: [
                    { quality: "1080p", format: "MP4", size: "125 MB", type: "mp4" },
                    { quality: "720p", format: "MP4", size: "78 MB", type: "mp4" },
                    { quality: "480p", format: "MP4", size: "45 MB", type: "mp4" },
                    { quality: "360p", format: "MP4", size: "28 MB", type: "mp4" },
                    { quality: "128 kbps", format: "MP3", size: "14 MB", type: "mp3" },
                    { quality: "64 kbps", format: "MP3", size: "7 MB", type: "mp3" }
                ]
            };
            
            // Function to validate YouTube URL
            function isValidYouTubeUrl(url) {
                const pattern = /^(https?:\/\/)?(www\.)?(youtube\.com|youtu\.?be)\/.+$/;
                return pattern.test(url);
            }
            
            // Function to extract video ID from URL
            function extractVideoId(url) {
                const regExp = /^.*((youtu.be\/)|(v\/)|(\/u\/\w\/)|(embed\/)|(watch\?))\??v?=?([^#&?]*).*/;
                const match = url.match(regExp);
                return (match && match[7].length === 11) ? match[7] : null;
            }
            
            // Function to simulate video analysis
            function analyzeVideo(url) {
                return new Promise((resolve) => {
                    setTimeout(() => {
                        // In a real implementation, you would use a backend service
                        // to fetch actual video information from YouTube
                        const videoId = extractVideoId(url);
                        
                        if (videoId) {
                            // Simulate successful video info retrieval
                            resolve({
                                success: true,
                                data: {
                                    ...sampleVideoData,
                                    thumbnail: `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg`
                                }
                            });
                        } else {
                            resolve({
                                success: false,
                                error: "Invalid YouTube URL. Please check and try again."
                            });
                        }
                    }, 1500);
                });
            }
            
            // Function to display video information
            function displayVideoInfo(videoData) {
                videoThumbnail.src = videoData.thumbnail;
                videoThumbnail.alt = videoData.title;
                videoTitle.textContent = videoData.title;
                videoChannel.textContent = videoData.channel;
                videoDuration.textContent = `Duration: ${videoData.duration}`;
                videoViews.textContent = `Views: ${videoData.views}`;
                
                // Clear previous quality buttons
                qualityButtons.innerHTML = '';
                
                // Add quality buttons
                videoData.formats.forEach(format => {
                    const button = document.createElement('button');
                    button.className = `quality-btn ${format.type}`;
                    button.innerHTML = `
                        <strong>${format.quality}</strong><br>
                        <small>${format.format} • ${format.size}</small>
                    `;
                    
                    button.addEventListener('click', function() {
                        // Show download link
                        alert(`Downloading ${format.quality} ${format.format} version...\n\nIn a real implementation, this would start the download.\n\nFor now, please use a dedicated YouTube downloader service.`);
                        
                        // In a real implementation, you would redirect to the download URL
                        // window.location.href = `your-backend-download-endpoint?videoId=${videoId}&quality=${format.quality}&format=${format.format}`;
                    });
                    
                    qualityButtons.appendChild(button);
                });
                
                // Show video info section
                videoInfo.classList.add('active');
            }
            
            // Event listener for download button
            downloadBtn.addEventListener('click', async function() {
                const url = videoUrlInput.value.trim();
                
                if (!url) {
                    alert("Please enter a YouTube video URL.");
                    return;
                }
                
                if (!isValidYouTubeUrl(url)) {
                    alert("Please enter a valid YouTube URL.");
                    return;
                }
                
                // Show loader
                loader.classList.add('active');
                videoInfo.classList.remove('active');
                
                // Analyze video
                const result = await analyzeVideo(url);
                
                // Hide loader
                loader.classList.remove('active');
                
                if (result.success) {
                    displayVideoInfo(result.data);
                    
                    // Scroll to video info
                    videoInfo.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                } else {
                    alert(result.error);
                }
            });
            
            // Allow Enter key to trigger download
            videoUrlInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    downloadBtn.click();
                }
            });
            
            // Simulate ad clicks
            document.querySelectorAll('.ad-button').forEach(button => {
                button.addEventListener('click', function() {
                    alert("In a real website, this would redirect to the advertiser's website.\n\nAd revenue helps keep this service free!");
                });
            });
            
            // Demo: Auto-fill with a sample URL on first visit
            if (!localStorage.getItem('fastTubeVisited')) {
                setTimeout(() => {
                    videoUrlInput.value = "https://www.youtube.com/watch?v=dQw4w9WgXcQ";
                    localStorage.setItem('fastTubeVisited', 'true');
                }, 500);
            }
        });
    </script>
</body>
