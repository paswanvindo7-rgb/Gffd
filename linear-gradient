    <script>
        // Sample video data for demo
        const sampleVideos = [
            {
                title: "How to Make YouTube Downloader Website",
                formats: [
                    { quality: "360p", type: "MP4", size: "45 MB" },
                    { quality: "720p", type: "MP4", size: "120 MB" },
                    { quality: "1080p", type: "MP4", size: "250 MB" },
                    { quality: "MP3", type: "Audio", size: "8 MB" }
                ]
            },
            {
                title: "Learn JavaScript in 1 Hour",
                formats: [
                    { quality: "480p", type: "MP4", size: "75 MB" },
                    { quality: "720p", type: "MP4", size: "150 MB" },
                    { quality: "MP3", type: "Audio", size: "12 MB" }
                ]
            }
        ];
        
        function processVideo() {
            const url = document.getElementById('youtubeUrl').value;
            
            if (!url) {
                alert("Please enter a YouTube URL");
                return;
            }
            
            // Show loading
            const resultDiv = document.getElementById('result');
            resultDiv.style.display = 'block';
            document.getElementById('title').textContent = "Analyzing video...";
            
            // Simulate processing delay
            setTimeout(() => {
                // Pick a random sample video for demo
                const randomVideo = sampleVideos[Math.floor(Math.random() * sampleVideos.length)];
                document.getElementById('title').textContent = randomVideo.title;
                
                // Generate format buttons
                const formatDiv = document.getElementById('formatButtons');
                formatDiv.innerHTML = '';
                
                randomVideo.formats.forEach(format => {
                    const button = document.createElement('div');
                    button.className = 'format-btn';
                    button.innerHTML = `
                        <strong>${format.quality}</strong><br>
                        <small>${format.type} ‚Ä¢ ${format.size}</small>
                    `;
                    button.onclick = () => startDownload(format.quality, format.type);
                    formatDiv.appendChild(button);
                });
                
                // Scroll to results
                resultDiv.scrollIntoView({ behavior: 'smooth' });
            }, 1500);
        }
        
        function startDownload(quality, type) {
            const url = document.getElementById('youtubeUrl').value;
            
            if (!url.includes('youtube.com') && !url.includes('youtu.be')) {
                alert("‚ö†Ô∏è This is a DEMO only!\n\nIn a real website:\n1. This would connect to a server\n2. Process the YouTube video\n3. Generate download link\n\nTo actually download videos, you need:\n- Backend server (PHP/Node.js/Python)\n- YouTube downloader API\n- Hosting with bandwidth");
                return;
            }
            
            // Show fake download progress
            alert(`‚¨áÔ∏è Download Starting...\n\nFormat: ${quality} ${type}\n\nNote: This is a frontend demo only.\nReal downloads require backend setup.`);
            
            // For demo purposes, show success after delay
            setTimeout(() => {
                alert("‚úÖ Download complete!\n\nIn a real implementation, the file would now be saved to your device.");
            }, 1000);
        }
        
        function showAd(adNumber) {
            const messages = [
                "üöÄ Premium features loading...\nThis would redirect to advertiser",
                "üéµ MP3 Converter opening...\nAdvertiser website would load here"
            ];
            alert(messages[adNumber - 1] + "\n\nAd revenue helps keep this service free!");
        }
        
        // Auto-fill sample URL for testing
        window.onload = function() {
            document.getElementById('youtubeUrl').value = "https://www.youtube.com/watch?v=dQw4w9WgXcQ";
        }
    </script>
